{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
		"esModuleInterop": true,
		"jsx": "react",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
    "noImplicitAny": true,
		"strict": true
	},
  "include": [
    "Customizer/**/*.ts",
    "assets/js/*",
    "types.js"
  ],
	"exclude": [
		"node_modules"
	]
}
