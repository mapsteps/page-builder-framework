{
	"name": "aura",
	"version": "1.0.0",
	"description": "Aura theme tooling",
	"author": "David",
	"license": "GPL-3.0",
	"devDependencies": {
		"@parcel/transformer-sass": "2.6.0",
		"parcel": "^2.10.3",
		"parcel-namer-rewrite": "2.10.3-rc.2",
		"wp-prettier": "^3.0.3"
	},
	"parcel-namer-rewrite": {
		"hashing": "never",
		"rules": {
			"(.*).js": "$1-min.js"
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"IE 11"
	],
	"scripts": {
		"build-site-js": "parcel build assets/js/site.js --dist-dir assets/js/min --no-source-maps --no-cache",
		"build-site-css": "parcel build assets/scss/style.scss --dist-dir ./ --no-source-maps --no-cache",
		"build-site": "npm run build-site-js && npm run build-site-css",
		"build-partial-js": ""
	}
}