{
	"name": "aura",
	"version": "1.0.0",
	"description": "Aura theme tooling",
	"author": "David",
	"license": "GPL-3.0",
	"devDependencies": {
		"@parcel/optimizer-data-url": "2.6.0",
		"@parcel/transformer-inline-string": "2.6.0",
		"@parcel/transformer-sass": "2.6.0",
		"@types/jquery": "^3.5.29",
		"parcel": "^2.10.3",
		"parcel-namer-rewrite": "2.10.3-rc.2",
		"parcel-resolver-ignore": "^2.2.0",
		"prettier": "npm:wp-prettier@^3.0.3"
	},
	"alias": {
		"jquery": {
			"global": "jQuery"
		}
	},
	"parcel-namer-rewrite": {
		"hashing": "never",
		"silent": true,
		"rules": {
			"(.*).js": "$1-min.js",
			"(.*).css": "$1-min.css"
		}
	},
	"parcelIgnore": [
		"img/.+"
	],
	"browserslist": "> 0.5%, last 2 versions, not dead",
	"scripts": {
		"build-site-js": "parcel build assets/js/site.js --dist-dir js/min --no-source-maps --no-cache",
		"build-site-css": "parcel build assets/scss/style.scss --dist-dir css/min --no-source-maps --no-cache",
		"build-site": "npm run build-site-js && npm run build-site-css",
		"build-individual-js": "parcel build \"assets/js/!(site|desktop-menu|mobile-menu|libraries)*.js\" --dist-dir js/min --no-source-maps --no-cache",
		"build-individual-css": "parcel build 'assets/scss/!(style)*.scss' --dist-dir css/min --no-source-maps --no-cache",
		"build-individual": "npm run build-individual-js && npm run build-individual-css",
		"build": "npm run build-site && npm run build-individual"
	}
}