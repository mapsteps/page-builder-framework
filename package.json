{
	"name": "aura",
	"version": "1.0.0",
	"description": "Aura theme development tooling",
	"author": "David",
	"license": "GPL-3.0",
	"devDependencies": {
		"@babel/core": "^7.23.9",
		"@babel/preset-react": "^7.23.3",
		"@parcel/config-default": "^2.11.0",
		"@parcel/optimizer-data-url": "^2.11.0",
		"@parcel/transformer-inline-string": "^2.11.0",
		"@parcel/transformer-sass": "^2.11.0",
		"@types/jquery": "^3.5.29",
		"@types/lodash": "^4.14.202",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"parcel": "^2.11.0",
		"parcel-namer-rewrite": "2.10.3-rc.2",
		"parcel-resolver-ignore": "^2.2.0",
		"prettier": "npm:wp-prettier@^3.0.3",
		"typescript": "^5.3.3",
		"wordpress__customize-browser": "github:usefulteam/wordpress__customize-browser"
	},
	"dependencies": {
		"@wordpress/components": "^25.16.0",
		"@wordpress/core-data": "^6.27.1",
		"@wordpress/data": "^9.20.0",
		"@wordpress/element": "^5.27.0",
		"@wordpress/hooks": "^3.50.0",
		"@wordpress/url": "^3.51.0",
		"colord": "^2.9.3",
		"jquery": "^3.7.1",
		"lodash": "^4.17.21",
		"react": "^18.2.0",
		"react-colorful": "^5.6.1",
		"react-dom": "^18.2.0",
		"styled-jsx": "^5.1.2"
	},
	"alias": {
		"react": {
			"global": "React"
		},
		"react-dom": {
			"global": "ReactDOM"
		},
		"jquery": {
			"global": "jQuery"
		},
		"wp": {
			"global": "wp"
		},
		"lodash": {
			"global": "_"
		},
		"@wordpress/hooks": {
			"global": "wp.hooks"
		}
	},
	"parcel-namer-rewrite": {
		"hashing": "never",
		"silent": true,
		"rules": {
			"(.*).js": "$1-min.js",
			"(.*).css": "$1-min.css"
		}
	},
	"parcelIgnore": [
		"img/.+"
	],
	"browserslist": "> 0.5%, last 2 versions, not dead",
	"scripts": {
		"build-site-jquery": "parcel build assets/js/site-jquery.js --dist-dir js/min --no-source-maps",
		"build-site-js": "parcel build assets/js/site.js --dist-dir js/min --no-source-maps",
		"build-site-css": "parcel build assets/scss/style.scss --dist-dir css/min --no-source-maps",
		"build-site": "npm run build-site-js && npm run build-site-css",
		"build-individual-js": "parcel build \"assets/js/!(site|site-jquery)*.js\" --dist-dir js/min --no-source-maps",
		"build-individual-css": "parcel build 'assets/scss/!(style)*.scss' --dist-dir css/min --no-source-maps",
		"build-individual": "npm run build-individual-js && npm run build-individual-css",
		"build": "npm run build-site && npm run build-individual",
		"watch-control-base": "parcel watch Customizer/Controls/Base/src/base-control.ts --dist-dir Customizer/Controls/Base/dist --no-source-maps",
		"build-control-base": "parcel build Customizer/Controls/Base/src/base-control.ts --dist-dir Customizer/Controls/Base/dist --no-source-maps",
		"watch-control-slider": "parcel watch Customizer/Controls/Slider/src/slider-control.ts --dist-dir Customizer/Controls/Slider/dist --no-source-maps",
		"build-control-slider": "parcel build Customizer/Controls/Slider/src/slider-control.ts --dist-dir Customizer/Controls/Slider/dist --no-source-maps"
	}
}